{
  "name": "doubleleft/hook",
  "description": "backend as a service",
  "keywords": ["hook", "doubleleft"],
  "license": "MIT",
  "authors": [{
    "name": "Endel Dreyer",
    "email": "edreyer@doubleleft.com"
  }],
  "autoload": {
    "classmap": ["src"],
    "psr-0": {}
  },
  "require": {
    "php": ">=5.3.0",
    "composer/composer": "dev-master",
    "slim/slim": "~2.4.3",
    "doctrine/dbal" : "2.*",
    "illuminate/database": "4.1.*",
    "illuminate/config": "4.1.*",
    "illuminate/cache": "4.1.*",
    "illuminate/encryption": "4.1.*",
    "swiftmailer/swiftmailer": "5.0.*",
    "jenssegers/mongodb": "1.3.*",
    "guzzlehttp/guzzle": "4.2.*",
    "cboden/Ratchet": "0.3.*",
    "react/socket": "0.4.*",
    "duccio/apns-php": "dev-master"
  },
  "require-dev": {
    "mockery/mockery": "0.8.0",
    "phpunit/phpunit": "3.7.*",
    "microsoft/windowsazure": "*",
    "pear-pear.php.net/http_request2" : "*",
    "aws/aws-sdk-php": "2.7.*",
    "dropbox/dropbox-sdk": "1.1.*",
    "opauth/opauth": "dev-master",
    "opauth/twitter": "dev-master",
    "opauth/facebook": "dev-master"
  },

  "repositories": [{
    "type": "pear",
    "url": "http://pear.php.net"
  }],

  "scripts": {
    "post-install-cmd": [ ]
  },
  "bin-dir": "bin",
  "minimum-stability": "dev"
}
